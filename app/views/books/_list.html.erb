<%= flash[:notice] %>

<% if book.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
  <%= pluralize(book.errors.count, "error")%> prohibited this odj from being saved:
  <ul>
  	<% book.errors.full_messages.each do |message| %>
  	<li><%= message %></li>
  	<% end %>
  </ul>
</div>
<% end %>

<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
<table class="table">
  <tbody>
  	<tr>
  	  <th>name</th>
  	  <th><%= user.name %></th>
  	</tr>
  	<tr>
  	  <th>introduction</th>
  	  <th><%= user.introduction %></th>
  	</tr>
  </tbody>
</table>
<%= link_to '', edit_user_path(user), class: "glyphicon glyphicon-wrench btn btn-default col-xs-12" %>


<%= form_for(book) do |f| %>

<h3>New book</h3>

<h4>title</h4>
<%= f.text_field :title, class: "col-xs-12" %>
<h4>Opinion</h4>
<%= f.text_area :body, class: "col-xs-12" %>

<%= f.submit 'Create Book', class: "col-xs-12" %>
<% end %>


